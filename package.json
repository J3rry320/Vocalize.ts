{
  "name": "vocalize.ts",
  "version": "1.2.0",
  "description": "A TypeScript library for integrating voice commands and speech synthesis into web applications. Easily set up voice interactions with custom text-to-speech options and speech recognition.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "scripts": {
    "build": "microbundle --compress --visualize",
    "dev": "microbundle watch",
    "test": "jest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "voice",
    "commands",
    "speech",
    "synthesis",
    "typescript",
    "speech-recognition",
    "text-to-speech",
    "web",
    "voice-interaction"
  ],
  "author": "Rutuparna (Jerry) Satpathy",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/J3rry320/Vocalize.ts",
  "bugs": {
    "url": "https://github.com/J3rry320/Vocalize.ts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/J3rry320/Vocalize.ts.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.1.1",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.2.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4"
  }
}
